package javaapplication8;

/**
 *
 * @author jerson
 */
import java.util.Scanner;
public class JavaApplication8 {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        // TODO code application logic here
        Scanner kb = new Scanner(System.in);
        
        int [] a = new int[10];
        int [] b= new int[10];
         int [] c= new int[20];


        System.out.println("Enter 10 digits for array A.");
        for (int i = 0; i < 10; i++) {
            System.out.print((i+1)+" Enter a digit: ");
            a[i] = kb.nextInt();
        }
        
         System.out.println("Enter 10 digits for array B.");
        for (int i = 0; i < 10; i++) {
            System.out.print((i+1)+" Enter a digit: ");
            b[i] = kb.nextInt();
        }
        
        System.out.println(" Displaying mixed array e.g a1,b1,a2,b2...etc");
        
        int j=0;
        for (int i = 0; i < 10; i++) {
            c[j] = a[i];
            j++;
            c[j] = b[i];
           j++;
           
            
        }
        
        for (int i = 0; i < 20; i++) {
            System.out.print(c[i]+ " ");
            
        }
  
          System.out.println("");
}
        
    }
    
