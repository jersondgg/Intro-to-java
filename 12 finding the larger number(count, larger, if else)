import java.io.*; 
  
public class JavaApplication44 {

/**
 * @param args the command line arguments
 */
 public static void main(String [] args){
     
     int a, b, c;
     Scanner kb =new Scanner(System.in);
     System.out.println("Enter the numbers: ");
     a = kb.nextInt();
     System.out.println("Enter number: ");
     b = kb.nextInt();
    System.out.println("Enter number: ");
     c = kb.nextInt();
     
     
     int count = 1, larger=a;
     if (b > larger) {
         larger = b;
     }
     if (c > larger) {
         larger = c;
     }
     if (larger == b) {
         count++;
     }
      if (larger == c) {
         count++;
     }
      
      if (count == 2) {
          System.out.println(" the larger integer wa " + larger + " was entered twice ");   
     }
      
      else  if (count == 3) {
          System.out.println(" the larger integer wa " + larger + " was entered three times ");   
     }
       else {
          System.out.println(" the larger integer wa " + larger + " was entered once ");   
     }
     
     }

      }
